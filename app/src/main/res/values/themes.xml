<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NutritionTracking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_med</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="menuSelectorButton">
        <item name="android:textSize">35dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/green_med</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="BigButton">
        <item name="android:textSize">36dp</item>
    </style>

    <style name="Heading1">
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>