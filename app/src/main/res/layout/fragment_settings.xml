<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Heading1"
        android:text="@string/my_goals"/>

    <SeekBar
        android:id="@+id/seek_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:min="1000"
        android:max="7000"
        android:progressTint="@color/grey"
        android:thumbTint="@color/grey"/>
    <TextView
        android:id="@+id/calText"
        style="@style/Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:paddingBottom="40dp"/>

    <SeekBar
        android:id="@+id/seek_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/protein"
        android:thumbTint="@color/protein"/>

    <TextView
        android:id="@+id/proteinText"
        style="@style/Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/protein"/>


    <SeekBar
        android:id="@+id/seek_fat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/fat"
        android:thumbTint="@color/fat"/>

    <TextView
        android:id="@+id/fatText"
        style="@style/Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fat"/>

    <SeekBar
        android:id="@+id/seek_carbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/carbs"
        android:thumbTint="@color/carbs"/>

    <TextView
        android:id="@+id/carbsText"
        style="@style/Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/carbs"/>



</LinearLayout>